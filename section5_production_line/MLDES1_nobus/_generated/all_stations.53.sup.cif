plant automaton A_separator:
  controllable c_on;
  controllable c_off;
  location On:
    initial;
    marked;
    edge c_off goto Off;
  location Off:
    edge c_on goto On;
end
supervisor automaton sup:
  alphabet A_separator.c_off, A_separator.c_on;
  location:
    initial;
    marked;
    edge A_separator.c_off when true;
    edge A_separator.c_on when true;
end
